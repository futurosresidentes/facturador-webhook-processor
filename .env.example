# Server Configuration
NODE_ENV=production
PORT=3000
API_KEY=your_secure_api_key_here_change_this_in_production

# Database Configuration (PostgreSQL from Render)
DATABASE_URL=postgresql://user:password@hostname:5432/database
DB_HOST=hostname
DB_PORT=5432
DB_NAME=database
DB_USER=user
DB_PASSWORD=password

# FR360 API Configuration
FR360_API_URL=https://fr360-7cwi.onrender.com/api/v1
FR360_BEARER_TOKEN=your_fr360_bearer_token_here
FR360_MAX_RETRIES=5
FR360_RETRY_DELAY=1000

# ActiveCampaign CRM Configuration
AC_BASE_URL=https://your_account.api-us1.com/api/3
AC_API_TOKEN=your_activecampaign_api_token_here
AC_MAX_RETRIES=5
AC_RETRY_DELAY=1000

# Frapp Membership Platform Configuration
FRAPP_API_URL=https://admin-appfr-os0a.onrender.com/api/v2/auth/register
FRAPP_API_KEY=your_frapp_api_key_here
FRAPP_CRM_ACCOUNT=your_crm_account_name
FRAPP_CRM_API_TOKEN=your_activecampaign_api_token_here
FRAPP_MODO_PRODUCCION=false
FRAPP_MAX_INTENTOS=5
FRAPP_DELAY_MS=1000

# Google Chat Webhooks for Notifications
GCHAT_SUCCESS_WEBHOOK=https://chat.googleapis.com/v1/spaces/YOUR_SPACE_ID/messages?key=YOUR_API_KEY&token=YOUR_TOKEN
GCHAT_ERROR_WEBHOOK=https://chat.googleapis.com/v1/spaces/YOUR_SPACE_ID/messages?key=YOUR_API_KEY&token=YOUR_TOKEN
GCHAT_CRM_ERROR_WEBHOOK=https://chat.googleapis.com/v1/spaces/YOUR_SPACE_ID/messages?key=YOUR_API_KEY&token=YOUR_TOKEN
GCHAT_FRAPP_WEBHOOK=https://chat.googleapis.com/v1/spaces/YOUR_SPACE_ID/messages?key=YOUR_API_KEY&token=YOUR_TOKEN

# ePayco Configuration (for webhook validation)
EPAYCO_PUBLIC_KEY=your_epayco_public_key
EPAYCO_PRIVATE_KEY=your_epayco_private_key
EPAYCO_TEST_MODE=false

# JWT Secret (for admin dashboard authentication)
JWT_SECRET=your_super_secret_jwt_key_change_in_production

# API Security (Bearer Token for endpoints protection)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
API_BEARER_TOKEN=your_secure_api_bearer_token_min_32_chars

# World Office Configuration (Facturador Electrónico)
WORLDOFFICE_API_URL=https://api.worldoffice.cloud
WORLDOFFICE_API_TOKEN=your_worldoffice_api_token
WORLDOFFICE_USERNAME=your_username
WORLDOFFICE_PASSWORD=your_password
WORLDOFFICE_MODO_PRODUCCION=false
WORLDOFFICE_EMITIR_DIAN=false
WORLDOFFICE_MAX_RETRIES=5
WORLDOFFICE_RETRY_DELAY=1000

# Strapi Facturación Configuration
STRAPI_API_URL=https://your-strapi.com
STRAPI_API_TOKEN=your_strapi_api_token

# Callbell Configuration (WhatsApp Notifications)
CALLBELL_API_URL=https://api.callbell.eu/v1
CALLBELL_API_KEY=your_callbell_api_key

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_FILES=30d
LOG_MAX_SIZE=20m
